---
import TypedSubtitle from "./TypedSubtitle";

import { ChevronDown } from "lucide-react";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="min-h-screen flex flex-col relative bg-code-pattern bg-cover bg-center bg-no-repeat">
  <div
    class="absolute inset-0 bg-gradient-to-r from-blue-900/50 to-purple-900/50"
  >
  </div>

  <div
    class="relative flex min-h-screen flex-col items-center justify-between px-4 text-center py-20"
  >
    <div aria-label="empty-space"></div>
    <article class="max-w-2xl mx-auto">
      <h1 class="mb-4 text-6xl font-bold text-white">{`Hola soy ${title}`}</h1>

      <span class="text-base text-white">
        Let's turn ideas into great solutions! ðŸš€</span
      >
      <p class="mb-8 text-xl text-white font-bold">
        <TypedSubtitle client:load />
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="#more-info"
          class="rounded-full bg-blue-600 px-10 py-4 font-semibold text-white transition-all hover:bg-blue-700"
        >
          MORE INFO
        </a>
        <a
          href="#cv"
          class="rounded-full bg-gray-200 px-10 py-4 font-semibold text-gray-900 transition-all hover:bg-gray-300"
        >
          LinkedIn
        </a>
      </div>
    </article>
    <a
      href={`#about`}
      class="bg-white hover:bg-gray-300/90 text-primary-foreground rounded-full p-2 shadow-lg transition-transform hover:translate-y-[-4px] animate-bounce z-10"
      aria-label="Scroll to next section "
    >
      <ChevronDown className="w-6 h-6" />
    </a>
  </div>
</div>

<style>
  .bg-code-pattern {
    background-image: linear-gradient(
        to right,
        rgba(0, 0, 0, 0.8),
        rgba(0, 0, 0, 0.8)
      ),
      url("/images/hero-bg.jpg");
  }
</style>
