---
const projects = [
  { title: 'Project 1', description: 'A responsive e-commerce website' },
  { title: 'Project 2', description: 'A real-time chat application' },
  { title: 'Project 3', description: 'A weather forecast app' },
];
---
<section id="portfolio" class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-8 text-center">My Portfolio</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
          <p>{project.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>