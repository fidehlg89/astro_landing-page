---
import Header from "./Header.astro";
import Footer from "./Footer.astro";

import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

import "../styles/global.css";
import ChatBot from "../components/shared/ChatbotWidget/ChatBot.astro";
import WhatsAppBtn from "../components/shared/WhatsAppBtn.astro";
import HeaderExample from "./HeaderExample.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="font-sans pt-16 flex flex-col min-h-screen">
    <HeaderExample />
    <main class="flex-grow">
      <slot />
    </main>
    <WhatsAppBtn />
    <Footer />
  </body>
</html>
