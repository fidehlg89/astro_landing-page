---
import ContactForm from "../shared/ContactForm";
import Container from "../shared/Container.astro";
---

<section id="contact" class="w-full p-5 lg:p-20 ">
  <Container className="p-5 lg:p-10 space-y-10">
   
    <article class="text-center px-5 space-y-10">
      <h2 class="text-4xl font-bold text-center">Contact Me</h2>
      <p>
        <span class="text-xs lg:text-3xl font-light italic"
          >Also you can send me a WhatsApp message</span
        >
      </p>
    </article>

    <section>
      <ContactForm client:load />
    </section>   

  </Container>
</section>
