---
import { Briefcase, User } from "lucide-react";

const typeConfig = {
  personal: {
    icon: User,
    text: "Personal Project",
    className: "bg-purple-100 text-purple-700"
  },
  enterprise: {
    icon: Briefcase,
    text: "Enterprise",
    className: "bg-blue-100 text-blue-700"
  }
};

interface ProjectTypeBadgeProps {
  type: "personal" | "enterprise";
}

const { type } = Astro.props as ProjectTypeBadgeProps;
const config = typeConfig[type];
const Icon = config.icon;
---

<span class={`flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium ${config.className}`}>
  <Icon size={12} />
  {config.text}
</span>
